<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.username}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.username %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= @user.occupation %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= @user.position %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.username}さんのプロトタイプ"%>
      </h2>
      <div class="user__card">
        <ul>
          <% @prototypes.each do |prototype| %>
            <li>
              <h3><%= prototype.name %></h3>
              <p><%= prototype.catch_copy %></p>
              <p><%= prototype.concept %></p>
              <% if prototype.image.attached? %>
                <%= image_tag prototype.image, style: "width: 200px; height: 200px;" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>