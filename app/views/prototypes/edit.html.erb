<main class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">プロトタイプ編集</h2>
      <%= form_with(model: @prototype, local: true) do |f| %>
        <div class="field">
          <%= f.label :name, "プロトタイプ名" %><br />
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :catch_copy, "キャッチコピー" %><br />
          <%= f.text_field :catch_copy %>
        </div>
        <div class="field">
          <%= f.label :concept, "コンセプト" %><br />
          <%= f.text_area :concept %>
        </div>
        <div class="field">
          <%= f.label :image, "画像" %><br />
          <%= f.file_field :image %>
        </div>
        <div class="actions">
          <%= f.submit "保存する", class: "form__btn" %>
        </div>
      <% end %>
    </div>
  </div>
</main>